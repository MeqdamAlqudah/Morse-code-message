          '.-.' => 'r',
          '...' => 's',
          '-' => 't',
          '..-' => 'u',
          '...-' => 'v',
          '.--' => 'w',
          '-..-' => 'x',
          '-.--' => 'y',
          '--..' => 'z' }

def decode(message, morse)
  result = []
  arr = message.split('   ')
  arr.each do |single|
    sub_arr = single.split
    sub_result = []
    sub_arr.each do |i|
      sub_result.push(morse[i].upcase)
    end
    result.push(sub_result.join)
  end
  result.join(' ')
end
